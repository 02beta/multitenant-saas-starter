{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@configs/typescript/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.config.*",
    "**/*.config.js",
    "**/*.config.mjs"
  ]
}
