{
  "name": "multitenant-saas-starter",
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm run dev:stop && pnpm run dev:start",
    "dev:start": "uv run cli dev start",
    "dev:stop": "uv run cli dev stop",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "pre-commit": "pre-commit run --all-files",
    "github:pr": "gh pr create --fill",
    "github:pr:patch": "uv run cli release create-patch-pr",
    "github:pr:minor": "uv run cli release create-minor-pr",
    "github:pr:major": "uv run cli release create-major-pr",
    "github:release": "uv run cli release create-github-release",
    "version:bump:patch": "uv run cli release bump-patch",
    "version:bump:minor": "uv run cli release bump-minor",
    "version:bump:major": "uv run cli release bump-major",
    "version:sync": "uv run cli release sync-versions"
  },
  "devDependencies": {
    "@configs/eslint": "workspace:*",
    "@configs/typescript": "workspace:*",
    "@configs/prettier": "workspace:*",
    "openapi-zod-client": "^1.18.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js-pure",
      "sharp"
    ]
  },
  "dependencies": {
    "precommit": "^1.2.2"
  }
}
