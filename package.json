{
  "name": "multitenant-saas-starter",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "echo 'Starting development environment...' && uv run cli dev stop && uv run cli dev start",
    "dev:kill": "echo 'Stopping development environment...' && uv run cli dev stop",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "precommit": "pre-commit run --all-files"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "openapi-zod-client": "^1.18.3",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js-pure",
      "sharp"
    ]
  },
  "dependencies": {
    "precommit": "^1.2.2"
  }
}
