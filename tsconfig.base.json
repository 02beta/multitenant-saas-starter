{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@configs/prettier": ["configs/prettier-config/prettier.config.mjs"],
      "@configs/prettier/*": ["configs/prettier-config/*"],
      "@configs/typescript": ["configs/typescript-config/base.json"],
      "@configs/typescript/*": ["configs/typescript-config/*"],
      "@configs/eslint": ["configs/eslint-config/base.js"],
      "@configs/eslint/*": ["configs/eslint-config/*"],
      "@libs/ui/*": ["libs/ui/src/*"],
      "@libs/ui/components/*": ["libs/ui/src/components/*"],
      "@libs/ui/components/ui/*": ["libs/ui/src/components/ui/*"],
      "@libs/ui/lib/*": ["libs/ui/src/lib/*"],
      "@libs/ui/styles/*": ["libs/ui/src/styles/*"],
      "@libs/ui/hooks/*": ["libs/ui/src/hooks/*"],
      "@libs/ui/types/*": ["libs/ui/src/types/*"],
      "@libs/ui/utils/*": ["libs/ui/src/utils/*"],
      "@libs/api-client-ts/*": ["libs/api-client-ts/src/*"],
      "@libs/api-client-ts": ["libs/api-client-ts/src"],
      "@auth-providers/supabase/*": ["libs/supabase-auth-provider/src/*"],
      "@auth-providers/supabase": ["libs/supabase-auth-provider/src"],
      "@api/*": ["apps/api/src/*", "libs/core/src/*"],
      "@web/components/*": ["apps/web/src/components/*"],
      "@web/hooks/*": ["apps/web/src/hooks/*"],
      "@web/lib/*": ["apps/web/src/lib/*"],
      "@web/styles/*": ["apps/web/src/styles/*"],
      "@web/types/*": ["apps/web/src/types/*"],
      "@web/utils/*": ["apps/web/src/utils/*"],
      "@web/services/*": ["apps/web/src/services/*"],
      "@web/app/*": ["apps/web/src/app/*"]
    }
  }
}
