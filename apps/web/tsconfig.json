{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../libs/ui/src/*"],
      "@workspace/ui/components/*": ["../../libs/ui/src/components/*"],
      "@workspace/ui/components/ui/*": ["../../libs/ui/src/components/ui/*"],
      "@workspace/ui/components/vui/*": ["../../libs/ui/src/components/vui/*"],
      "@workspace/ui/lib/*": ["../../libs/ui/src/lib/*"],
      "@workspace/ui/styles/*": ["../../libs/ui/src/styles/*"],
      "@workspace/ui/hooks/*": ["../../libs/ui/src/hooks/*"],
      "@configs/eslint/*": ["../../libs/eslint-config/*"],
      "@configs/typescript/*": ["../../libs/typescript-config/*"],
      "@workspace/typescript-sdk": ["../../libs/shared/src/index.ts"],
      "@workspace/typescript-sdk/*": ["../../libs/shared/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
